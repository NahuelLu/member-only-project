extends layout

block content 
    h1=title

    form(method='POST' action='')
        div.form-group
            label(for='name') Name:
            input#name.form-control(type='text' placeholder='name' name='name' required='true')
            label(for='last_name') Last Name:
            input#last_name.form-control(type='text' placeholder='last_name' name='last_name' required='true')
            label(for='username') User Name:
            input#username.form-control(type='text' placeholder='username' name='username' required='true')
            label(for='password') Password:
            input#password.form-control(type='password' placeholder='password' name='password' required='true')
            label(for='membership_status') Membership Status:
            input#membership_status.form-control(type='text' placeholder='membership_status' name='membership_status' required='true')

            button.btn.btn-primary(type='submit') Submit
    if errors
        ul
        for error in errors
            li!= error.msg