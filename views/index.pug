extends layout

block content
    h1= title
    p Welcome to #{title}
    .posts-container
      each post in posts
        if userIsLoggedIn && membership_status
          .post
            .post-meta
              p Created by #{post.author.username}
              p Timestamp: #{post.timestamp_formatted}
            h3
              a(href=post.url) #{post.title}
        else
          .post
            h3
              a(href=post.url) #{post.title}
            .post-content
              p #{post.content}